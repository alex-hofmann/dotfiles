set nocompatible
filetype off
filetype plugin indent on

set number
set showcmd
set showmode

set noswapfile
set nobackup
set nowritebackup

set autowrite
set autoread
set laststatus=2
set hidden

set ruler

set noshowmode

set incsearch
set hlsearch
set ignorecase
set smartcase
set ttyfast

set autoindent
set complete-=i
set showmatch
set smarttab

set et
set tabstop=4
set shiftwidth=4
set expandtab

set notimeout
set ttimeout
set ttimeoutlen=10
